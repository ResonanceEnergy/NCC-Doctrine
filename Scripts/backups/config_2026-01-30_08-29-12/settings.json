{
  "chat.agent.maxRequests": 5000,
  "git.ignoreLimitWarning": true,
  "files.maxMemoryForLargeFilesMB": 4096,
  "files.exclude": {
    "**/.venv": true,
    "**/node_modules": true,
    "**/backups": true,
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/logs/*.log": true,
    "**/temp/**": true,
    "**/cache/**": true
  },
  "search.followSymlinks": false,
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/.venv/**": true,
    "**/backups/**": true,
    "**/logs/**": true,
    "**/temp/**": true,
    "**/cache/**": true,
    "**/*.log": true
  },
  "typescript.tsserver.maxTsServerMemory": 4096,
  "files.associations": {
    "*.ps1": "powershell",
    "*.md": "markdown",
    "*.psm1": "powershell",
    "*.psd1": "powershell",
    "*.cmd": "bat",
    "*.bat": "bat"
  },
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.hotExit": "onExitAndWindowClose",
  "files.encoding": "utf8",
  "search.exclude": {
    "**/*.log": true,
    "**/backups/**": true,
    "**/.venv/**": true,
    "**/node_modules/**": true,
    "**/logs/**": true,
    "**/temp/**": true,
    "**/cache/**": true,
    "**/.git/**": true,
    "**/dist/**": true,
    "**/build/**": true
  },
  "workbench.quickOpen.closeOnFocusLost": false,
  "search.searchOnType": false,
  "breadcrumbs.enabled": true,
  "outline.showVariables": false,
  "outline.showConstants": false,
  "outline.showEnums": true,
  "outline.showFunctions": true,
  "outline.showClasses": true,
  "editor.minimap.enabled": true,
  "editor.wordWrap": "off",
  "editor.cursorSurroundingLines": 5,
  "editor.smoothScrolling": true,
  "editor.stickyScroll.enabled": true,
  "git.autofetch": false,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "terminal.integrated.shell.windows": "C:\\Windows\\System32\\WindowsPowerShell\\v1.0\\powershell.exe",
  "terminal.integrated.shellArgs.windows": [
    "-NoLogo"
  ],
  "terminal.integrated.scrollback": 10000,
  "editor.quickSuggestions": {
    "other": false,
    "comments": false,
    "strings": true
  },
  "editor.parameterHints.enabled": true,
  "files.maxWatchers": 524288,
  "typescript.tsserver.nodePath": "node",
  "security.workspace.trust.enabled": true,
  "files.simpleDialog.enable": true,
  "scm.defaultViewMode": "tree",
  "diffEditor.renderSideBySide": false,
  "timeline.pageSize": 50,
  "references.preferredLocation": "view",
  "workbench.commandPalette.preserveInput": true,
  "workbench.panel.defaultLocation": "right",
  "zenMode.fullScreen": false,
  "zenMode.centerLayout": true,
  "workbench.editor.splitSizing": "split",
  "files.backupPath": "C:\\Temp\\VSCodeBackups",
  "powershell.powerShellDefaultVersion": "Windows PowerShell",
  "powershell.enableProfileLoading": false,
  "powershell.codeFormatting.useCorrectCasing": true,
  "python.defaultInterpreterPath": "./.venv/Scripts/python.exe",
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  "json.schemas": [
    {
      "fileMatch": [
        "NCC_ProjectSchema.json"
      ],
      "url": "./NCC_ProjectSchema.json"
    }
  ],
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    "*.ps1": "${capture}.ps1.md,${capture}.tests.ps1",
    "*.js": "${capture}.js.map,${capture}.min.js,${capture}.d.ts",
    "*.ts": "${capture}.js,${capture}.d.ts,${capture}.js.map",
    "package.json": "package-lock.json,yarn.lock,.yarnrc,.npmrc",
    "*.md": "*.md.html,*.md.pdf"
  },
  "workbench.colorCustomizations": {
    "titleBar.activeBackground": "#1e3a5f",
    "titleBar.activeForeground": "#ffffff",
    "statusBar.background": "#2d5aa0",
    "statusBar.foreground": "#ffffff"
  },
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "task.autoDetect": "on",
  "files.sizeWarning": 104857600,
  "workspace": {
    "trust": {
      "enabled": false
    }
  },
  "extensions": {
    "showRecommendationsOnlyOnDemand": false,
    "ignoreRecommendations": false
  },
  "editor": {
    "codeActionsOnSave": {
      "source.organizeImports": "explicit",
      "source.fixAll.eslint": "explicit"
    },
    "largeFileOptimizations": true
  },
  "search": {
    "maxResults": 10000
  }
}
