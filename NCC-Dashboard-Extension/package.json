{
  "name": "ncc-dashboard-display",
  "displayName": "NCC Dashboard Display",
  "description": "Real-time NCC operations dashboard display in VS Code editor area",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ncc-dashboard.show",
        "title": "Show NCC Dashboard"
      },
      {
        "command": "ncc-dashboard.refresh",
        "title": "Refresh NCC Dashboard"
      },
      {
        "command": "ncc-dashboard.hide",
        "title": "Hide NCC Dashboard"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "ncc-dashboard.show",
          "when": "workspaceFolderCount != 0"
        },
        {
          "command": "ncc-dashboard.refresh",
          "when": "ncc-dashboard.visible"
        },
        {
          "command": "ncc-dashboard.hide",
          "when": "ncc-dashboard.visible"
        }
      ]
    },
    "configuration": {
      "title": "NCC Dashboard",
      "properties": {
        "ncc-dashboard.autoRefresh": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic refresh of dashboard data"
        },
        "ncc-dashboard.refreshInterval": {
          "type": "number",
          "default": 15,
          "minimum": 5,
          "maximum": 300,
          "description": "Refresh interval in seconds"
        },
        "ncc-dashboard.dataPath": {
          "type": "string",
          "default": "./data",
          "description": "Path to NCC data directory relative to workspace"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "eslint": "^8.34.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0"
  }
}