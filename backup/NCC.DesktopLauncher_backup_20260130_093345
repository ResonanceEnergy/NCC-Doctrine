$masterBrainButton.Add_Click({
    $statusLabel.Text = "Running Master Brain Analysis..."
    Start-Process powershell.exe -ArgumentList "-File scripts/Master_Brain_Storage_Analysis.ps1" -WorkingDirectory $PSScriptRoot
    $statusLabel.Text = "Analysis Started"
})
$form.Controls.Add($masterBrainButton)

